#!/bin/zsh

. ~/.zsh/vars

alias mv='mv -v'
alias mmv='noglob zmv -W'
alias rm='rm -iv'
alias cp='cp -v'
alias mplayer='mplayer -idx'
alias wget='wget --timeout 10'
alias grep='grep --color=auto'

alias c='clear'
alias ll='ls -ahl | more; echo "\e[1;32m --[\e[1;34m Dirs:\e[1;36m `ls -al | egrep \"^drw\" | wc -l` \e[1;32m|\e[1;35m Files: \e[1;31m`ls -al | egrep -v \"^drw\" | grep -v total | wc -l` \e[1;32m]--"'
alias cdc='cd; clear'
alias ls='ls -GF'

# auto open images
alias -s {jpg,JPG,jpeg,JPEG,png,PNG,gif,GIF}='open -a Preview'
# auto open movies
alias -s {mpg,mpeg,avi,ogm,wmv,m4v,mp4,mov}='open -a MPlayer\ OSX\ Extended'
# auto open audio
alias -s {mp3,ogg,wav,flac}='open -a Vox'
# auto open web addresses
alias -s {html,php,com,net,org,gov}='open -a Firefox'
# auto open regular files
alias -s txt='vim'
alias -s pdf='open -a Preview'

alias wcat='wget -q -O -'
alias svim='sudo vim'
alias sv='svim'
alias v='mvim'
alias cmake='cmake -DCMAKE_INSTALL_PREFIX=/usr -DSYSCONFDIR=/etc'
alias hosteurope='ssh root@83.169.21.36'
alias tunneledhosteurope='ssh -t administrator@10.28.1.81 ssh root@83.169.21.36'
alias jewvps='ssh -l gigamo -p 18763 jefferson.sharpcode.se'
alias lokvps='ssh administrator@10.28.1.81'
#alias esltv='/home/gig/downloads/octoshape/OctoshapeClient -url:ESL.oph350'
#alias esltv2='/home/gig/downloads/octoshape/OctoshapeClient -url:tetv.cebit1'
alias run='open -a'
alias redis='redis-server /usr/local/etc/redis.conf'
alias mongod='mongod --dbpath=/Users/gig/.mongo/data'
alias unicornc='RAILS_ENV=development unicorn -l 3000 -c config/unicorn.rb -E development'
alias unicornd='RAILS_ENV=production unicorn -l 3000 -c config/unicorn.rb -E production -D'
alias clearrbc='rm -f */**/*.rbc'
