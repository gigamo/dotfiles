#!/bin/zsh

. ~/.zsh/vars

alias mv='mv -v'
alias mmv='noglob zmv -W'
alias rm='rm -iv'
alias cp='cp -v'
alias wget='wget --timeout 10'
alias grep='grep --color=auto'
alias c='clear'
#alias ll='ls -ahl | more; echo "\e[1;32m --[\e[1;34m Dirs:\e[1;36m `ls -al | egrep \"^drw\" | wc -l` \e[1;32m|\e[1;35m Files: \e[1;31m`ls -al | egrep -v \"^drw\" | grep -v total | wc -l` \e[1;32m]--"'
alias ll='ls -aGF; echo "\e[1;32m --[\e[1;34m Dirs:\e[1;36m `ls -al | egrep \"^drw\" | wc -l` \e[1;32m|\e[1;35m Files: \e[1;31m`ls -al | egrep -v \"^drw\" | grep -v total | wc -l` \e[1;32m]--"'
alias cdc='cd; clear'
alias ls='ls -GF'

# auto open images
alias -s {jpg,JPG,jpeg,JPEG,png,PNG,gif,GIF}='firefox'
# auto open movies
alias -s {mpg,mpeg,avi,ogm,wmv,m4v,mp4,mov}='vlc'
# auto open audio
alias -s {mp3,ogg,wav,flac}='vlc'
# auto open web addresses
alias -s {html,php,com,net,org,gov}='firefox'
# auto open regular files
alias -s txt='vim'
alias -s pdf='firefox'

alias mplayer='mplayer -idx'
alias wcat='wget -q -O -'
alias v='vim'
alias dirsizes='du -h -d 1'

alias ruby_test_file='RAILS_ENV=test ruby -I"lib:test"'

alias flux='xflux -l 51 -g 3.983333'

alias j='jump'

alias sumount='sudo mount -o gid=users,fmask=113,dmask=002'
