# modes
bindsym $mod+m mode "layout"
mode "layout" {
  bindsym 1 layout stacking; mode "default"
  bindsym 2 layout tabbed; mode "default"
  bindsym 3 layout toggle split; mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+b mode "border"
mode "border" {
  bindsym 1 border pixel 2; mode "default"
  bindsym 2 border normal 2; mode "default"
  bindsym 3 border none; mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+i mode "i3wm"
mode "i3wm" {
  bindsym 1 reload; mode "default"
  bindsym 2 restart; mode "default"
  bindsym 3 exit; mode "default"
  bindsym 4 exec i3lock -i /home/gig/Pictures/wallhaven-29165.jpg && systemctl suspend; mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bar {
  mode dock
  modifier $mod
  position top
  workspace_buttons yes
  #font pango: Roboto Medium, FontAwesome 9
  font pango: FontAwesome, Inconsolata Bold 9
  #font pango: xos4 Terminus, FontAwesome 8
  #status_command i3status -c "~/.config/i3/i3status.conf"
  status_command ~/Scripts/i3bar_exec_secondary
  output DVI-I-1
  tray_output HDMI-0
  strip_workspace_numbers yes
  height 20

  colors {
    background #004E76
    statusline #FFFFFF
    focused_background #005F87
    focused_statusline #FFFFFF
    separator  #FF9955
#                        border  backgr   text
    focused_workspace   #00AAD4 #00AAD4 #F9F9F9
    active_workspace    #F9F9F9 #F9F9F9 #00AAD4
    inactive_workspace  #F9F9F9 #F9F9F9 #000000
    urgent_workspace    #272727 #272727 #00AAD4
  }
}

