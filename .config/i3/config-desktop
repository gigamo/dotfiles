floating_modifier $mod
default_orientation horizontal
workspace_layout default
#new_window normal 2
new_window pixel 2
workspace_auto_back_and_forth no
focus_follows_mouse no

gaps inner 5
gaps outer 0

set $WS1 "1:"
set $WS2 "2:"
set $WS3 "3:"
set $WS4 "4:"
set $WS5 "5:"
set $WS6 "6:"
set $WS7 "7:"
set $WS8 "8:"
set $WS9 "9:9"
